{
    "name": "mvieira/macaroons",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/mickaelvieira/macaroons",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Mickael Vieira",
            "email": "contact@mickael-vieira.com",
            "homepage": "http://mickael-vieira.com"
        }
    ],
    "keywords": [
        "macaroon",
        "cookie",
        "authentication",
        "authorization",
        "caveats",
        "decentralization"
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.0",
        "satooshi/php-coveralls": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "leanphp/phpspec-code-coverage": "^3.1"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "files": [
            "src/Macaroons/Crypto/functions.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
